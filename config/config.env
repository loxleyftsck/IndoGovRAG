# RAG Indonesian Gov Docs - Configuration

# Project Structure
PROJ_ROOT = c:/Users/LENOVO/.gemini/antigravity/playground/magnetic-helix
DATA_DIR = ${PROJ_ROOT}/data
DOCS_DIR = ${DATA_DIR}/documents
VECTOR_DB_DIR = ${DATA_DIR}/vector_db

# Data Collection
JDIH_DOWNLOAD_LIMIT = 50
PDF_STORAGE_PATH = ${DOCS_DIR}/pdfs

# Text Processing
CHUNK_SIZE = 512
CHUNK_OVERLAP = 128
MIN_CHUNK_LENGTH = 100

# Embedding Model
EMBEDDING_MODEL = intfloat/multilingual-e5-base
EMBEDDING_DEVICE = cpu
BATCH_SIZE = 32

# Vector DB (ChromaDB)
CHROMA_PERSIST_DIR = ${VECTOR_DB_DIR}/chroma
COLLECTION_NAME = indonesian_gov_docs

# LLM Configuration
LLM_PRIMARY = gemini-pro
LLM_FALLBACK = gemini-1.5-flash
TEMPERATURE = 0.7
MAX_OUTPUT_TOKENS = 500

# Retrieval
TOP_K = 5
SIMILARITY_THRESHOLD = 0.7

# Evaluation
BASELINE_DATASET = ${DATA_DIR}/baseline_eval_dataset.json
EVAL_RESULTS_DIR = ${DATA_DIR}/eval_results
